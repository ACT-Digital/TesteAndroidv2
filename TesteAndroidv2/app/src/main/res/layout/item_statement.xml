<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_transaction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:textColor="#FFA8B4C4"
                tools:text="@sample/list_transactions.json/statementList/title"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_transaction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                tools:text="@sample/list_transactions.json/statementList/desc"
                android:textColor="#FF485465"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_transaction_title"
                app:layout_constraintTop_toBottomOf="@+id/item_transaction_title" />

            <TextView
                android:id="@+id/item_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                tools:text="@sample/list_transactions.json/statementList/date"
                android:textColor="#FFA8B4C4"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_transaction_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_transaction_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@sample/list_transactions.json/statementList/value"
                android:textColor="#FF485465"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/item_transaction_description"
                app:layout_constraintEnd_toEndOf="@+id/item_transaction_date"
                app:layout_constraintTop_toTopOf="@+id/item_transaction_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>